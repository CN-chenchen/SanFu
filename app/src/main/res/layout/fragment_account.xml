        android:layout_height="52.0dip"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的三福"
            android:textSize="18.0sp" />

        <TextView
