<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80.0dip"
        android:layout_margin="10.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goods_cart_items_imv_isselected"
            android:layout_width="wrap_content"
            android:layout_height="80.0dip"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="80.0dip"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/goods_cart_items_imv_title"
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_marginLeft="10.0dip"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="80.0dip"
                android:layout_marginLeft="10.0dip"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/goods_cart_items_txv_goods_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1"
                    android:textSize="12.0sp" />

                <TextView
                    android:id="@+id/goods_cart_items_txv_buy_price"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14.0sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/goods_cart_items_txv_selected_menu"
                        android:layout_width="25.0dip"
                        android:layout_height="25.0dip"
                        android:background="@drawable/abs__ab_stacked_solid_light_holo"
                        android:gravity="center"
                        android:text="-"
                        android:textSize="14.0sp" />

                    <TextView
                        android:id="@+id/goods_cart_items_txv_selected_num"
                        android:layout_width="75.0dip"
                        android:layout_height="25.0dip"
                        android:background="@drawable/share_btn_press"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="14.0sp" />

                    <TextView
                        android:id="@+id/goods_cart_items_txv_selected_add"
                        android:layout_width="25.0dip"
                        android:layout_height="25.0dip"
                        android:background="@drawable/abs__ab_stacked_solid_light_holo"
                        android:gravity="center"
                        android:text="+"
                        android:textSize="14.0sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/goods_cart_items_txv_size_and_color"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12.0sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>